<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HomePageDifferentCardsPOC.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HomePageDifferentCardsPOC"
    xmlns:views="clr-namespace:HomePageDifferentCardsPOC.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="HomePageDifferentCardsPOC"
    BackgroundColor="White">
    <TabBar Shell.TabBarForegroundColor="DeepPink" Shell.UnselectedColor="Gray">
        <Tab>
            <ShellContent Icon="expenses" Title="Home" ContentTemplate="{DataTemplate views:HomePage}"/>
        </Tab>
        
        <Tab>
            <ShellContent Icon="company.png" Title="Company" ContentTemplate="{DataTemplate views:CompanyPage}"/>
        </Tab>
        <Tab>
            <ShellContent Icon="notification_on.png" Title="Notification" ContentTemplate="{DataTemplate views:NotificationsPage}"/>
        </Tab>
        
        <Tab>
            <ShellContent Icon="notification_on" Title="My Details" ContentTemplate="{DataTemplate views:MyDetailsPage}"/>
        </Tab>
    </TabBar>
</Shell>
